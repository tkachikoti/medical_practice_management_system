{% extends "base.html.jinja" %}
{% block styles %}
.wrap-table-text {
    word-wrap: break-word;
    max-width: 160px;
}
{% endblock %}
{% block maincontent %}
<div class="row justify-content-center">
    <div class="col-auto">
        {% if employee_table_data %}
        <h2 class="text-center my-5">Employee Table</h2>
        <p>
            <button type="button" class="btn btn-primary" onclick="create_employee_button()">Create Employee</button>
        </p>
        <table class="table table-responsive table-hover shadow p-3 mb-5 bg-body rounded">
            <thead>
                <tr>
                    <th scope="col">Employee ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for element in employee_table_data %}
                <tr>
                    <th scope="row">{{ element.id }}</th>
                    <td class="wrap-table-text">{{ element.name }}</td>
                    <td>
                        <form id="delete_data_form" method="post" action="/delete">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">Open</button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="/employee/update?id={{ element.id }}">Update Employee</a></li>
                                    <li><a class="dropdown-item" href="#" onclick="confirm_deletion()">Delete Employee</a></li>
                                </ul>
                            </div>
                            <label for="idInput1" class="form-label visually-hidden">ID</label>
                            <input name="id" type="hidden" class="form-control visually-hidden" id="idInput1" value="{{ element.id }}">
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="shadow p-3 mb-5 bg-body rounded justify-content-center text-center my-5">
            <h2 class="mb 3">No employees found</h2>
            <button type="button" class="btn btn-primary btn-lg" onclick="create_employee_button()">CREATE EMPLOYEE</button>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
{% block scripts %}
    function create_employee_button() {
        window.location.href = "/employee/create";
    }
    function confirm_deletion() {
        if (window.confirm("Do you really want to delete this data?")) {
            document.getElementById('delete_data_form').submit();
        }
    }
{% endblock %}